# Application Settings
NODE_ENV=production
PORT=3000
DEBUG=

# EVE Online API (Get these from https://developers.eveonline.com/)
# Callback URL for docker should be http://YOUR_DOMAIN/callback or http://localhost/callback
EVE_ID=your_eve_client_id
EVE_SECRET=your_eve_secret_key
EVE_CALLBACK=http://localhost/callback
EVE_DELIVERIES_SESSION_SECRET=change_this_to_a_long_random_string

# Database Configuration
MYSQL_HOST=db
MYSQL_PORT=3306
MYSQL_DATABASE=mango_deliveries
MYSQL_USER=mango
MYSQL_PASSWORD=secure_password
MYSQL_ROOT_PASSWORD=secure_root_password
MYSQL_CONNECTION_LIMIT=10
